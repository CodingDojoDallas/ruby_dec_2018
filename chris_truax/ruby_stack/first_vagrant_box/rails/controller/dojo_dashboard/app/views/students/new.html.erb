<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<div class="container">
    <h1>New Student</h1>
</div>
<div class="container">
    <form action='/dojos/<%= @dojo.id %>/students' method='post'>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
            <label for="exampleInputtext1">First Name:</label>
            <input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" name="student[first_name]">
        </div>
        <div class="form-group">
            <label for="exampleInputtext1">last_name:</label>
            <input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" name="student[last_name]">
        </div>
        <div class="form-group">
            <label for="exampleInputtext1">Email:</label>
            <input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" name="student[email]">
        </div>
        <div class="form-group">
            <label for="exampleInputtext1">Dojo:</label>
            <select class="form-control" id="exampleFormControlSelect1" name="student[dojo_id]">
                <option value=<%= @dojo.id %>><%= @dojo.branch %></option>
            <% @dojos.each do |dojo| %>
                <option value=<%= dojo.id %>><%= dojo.branch %></option>
            <% end %>
            </select>
        </div>
        <button type="submit" class="btn btn-success">New</button>
    </form>
    <a class="badge badge-primary" href="/dojos">Home</a><a class="badge badge-info" href="/dojos/<%=@dojo.id %>"><%=@dojo.branch %></a>
</div>