<% content_for :left_column do %>
<h1>All Users</h1>
<table class="container table">
        <thead>
            <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Favorite Language</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
            <th scope="row"><%=user.first_name%></th>
            <td><%=user.last_name%></td>
            <td><%=user.favorite_language%></td>
            </tr>
            <%end%>
        </tbody>
</table>
<% end %>
<% content_for :right_column do %>
<div class="container">
    <h1>New User</h1>
</div>
<div class="container">
    <form action='/users' method='post'>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
            <label for="exampleInputtext1">First Name:</label>
            <input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" name="user[first_name]">
        </div>
        <div class="form-group">
            <label for="exampleInputtext1">Last Name:</label>
            <input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" name="user[last_name]">
        </div>
        <div class="form-group">
            <label for="exampleInputtext1">Favorite Language:</label>
            <input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" name="user[favorite_language]">
        </div>
        
        <button type="submit" class="btn btn-success">New</button>
    </form>
    <a class="badge badge-primary" href="/posts">All Posts</a>
</div>
<% end %>