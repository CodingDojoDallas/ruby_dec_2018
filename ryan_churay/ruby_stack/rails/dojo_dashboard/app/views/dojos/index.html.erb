<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<h1>Listing <%= @dojos.count %> Dojos</h1>
<table class="table col-lg-10">
  <thead>
    <tr>
      <th scope="col">Coding Dojo Branch</th>
      <th scope="col">Street</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @dojos.each do |dojo| %>
      <tr>
        <td><%= dojo.branch %></td>
        <td><%= dojo.street %></td>
        <td><%= dojo.city %></td>
        <td><%= dojo.state %></td>
        <td>
          <a class='badge badge-success' href="/dojos/<%= dojo.id %>">Show</a>||
          <a class='badge badge-primary' href="/dojos/<%= dojo.id %>/edit">Edit</a>||
          <a href="/dojos/<%= dojo.id %>" class='badge badge-danger' data-method="delete"> Destroy</a>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
<a class='btn btn-primary m-1' href="/dojos/new">New Dojo</a>
