<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<div class="container bg-info p-2">
  <h1>Edit Student</h1>
  <form class="form-group" action="/dojos/<%= @student.dojo_id %>/students/<%= @student.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="patch">

    <div class="form-group row">
      <label for="first_name" class="col-lg-2 col-form-label">First Name: </label>
      <div class="col-lg-6">
        <input type="text" class="form-control" value='<%= @student.first_name %>' name='student[first_name]'>
      </div>
    </div>
    <div class="form-group row">
      <label for="last_name" class="col-lg-2 col-form-label">Last Name: </label>
      <div class="col-lg-6">
        <input type="text" class="form-control" value='<%= @student.last_name %>' name='student[last_name]'>
      </div>
    </div>
    <div class="form-group row">
      <label for="email" class="col-lg-2 col-form-label">Email: </label>
      <div class="col-lg-6">
        <input type="text" class="form-control" value='<%= @student.email %>' name='student[email]'>
      </div>
    </div>
    <div class="form-group">
      <label for="student[dojo_id]">Dojo:</label>
      <select class="form-control" name='student[dojo_id]'>
        <option value=<%= @dojo.id %>><%= @dojo.branch %></option>
        <% @dojos.each do |i| %>
          <option value=<%= i.id %>><%= i.branch %></option>
        <% end %>
      </select>
    </div>
    <div class="text-right col-lg-8">
      <button class='btn btn-dark' type="submit" value="submit" name="button">Submit</button>
    </div>
  </form>
</div>
